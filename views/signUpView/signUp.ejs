<div class="sign_up_form_container">
  <form action="/sign-up" method="post">
    <h3>Create Account</h3>
    <div class="sign_up">
      <ul class="sign_up_input">
        <li>
          <label for="firstName">First Name </label
          ><input
            type="text"
            min="3"
            max="255"
            required
            id="firstName"
            name="firstName"
          />
        </li>
        <li>
          <label for="lastName">Last Name </label
          ><input
            type="text"
            min="3"
            max="255"
            required
            id="lastName"
            name="lastName"
          />
        </li>
        <li>
          <label for="username">Username </label
          ><input
            type="text"
            min="3"
            max="255"
            required
            id="username"
            name="username"
          />
        </li>
        <li>
          <label for="email">Email </label
          ><input type="email" required id="email" name="email" />
        </li>
        <li>
          <label for="password">Password </label
          ><input
            type="password"
            id="password"
            name="password"
            min="8"
            max="255"
            required
          />
        </li>
        <li>
          <label for="confirmPassword">Confirm Password </label
          ><input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            min="8"
            max="255"
            required
          />
        </li>
        <li>
          <p class="log_in_label">
            Already have an account ? log in <a href="/log-in">here</a>.
          </p>
        </li>
        <li>
          <button class="sign_up" type="submit">Sign Up</button>
        </li>
      </ul>
    </div>
  </form>
</div>
